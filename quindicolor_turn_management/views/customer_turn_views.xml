<odoo>
    <!-- Acción para abrir la vista de turnos -->
    <record id="action_customer_turn" model="ir.actions.act_window">
        <field name="name">Turnos</field>
        <field name="res_model">customer.turn</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Gestiona los turnos de atención al cliente en los puntos de venta.
            </p>
        </field>
    </record>

    <!-- Menú principal y submenú -->
    <menuitem id="menu_customer_turn_root" name="Gestión de Turnos" sequence="10"/>
    <menuitem id="menu_customer_turn" name="Turnos" parent="menu_customer_turn_root" action="action_customer_turn"/>

    <!-- Vista de lista para turnos -->
    <record id="view_customer_turn_tree" model="ir.ui.view">
        <field name="name">customer.turn.tree</field>
        <field name="model">customer.turn</field>
        <field name="arch" type="xml">
            <tree string="Turnos">
                <field name="name"/>
                <field name="customer_name"/>
                <field name="status"/>
                <field name="assigned_employee"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario para turnos -->
    <record id="view_customer_turn_form" model="ir.ui.view">
        <field name="name">customer.turn.form</field>
        <field name="model">customer.turn</field>
        <field name="arch" type="xml">
            <form string="Turno">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_name"/>
                        <field name="status"/>
                        <field name="assigned_employee"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="duration" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
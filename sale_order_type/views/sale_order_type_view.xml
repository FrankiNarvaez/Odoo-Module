<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_type_form" model="ir.ui.view">
        <field name="name">sale.order.type.form</field>
        <field name="model">sale.order.type</field>
        <field name="arch" type="xml">
            <form string="Sale Order Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sale_order_type_tree" model="ir.ui.view">
        <field name="name">sale.order.type.tree</field>
        <field name="model">sale.order.type</field>
        <field name="arch" type="xml">
            <tree string="Sale Order Types">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="action_sale_order_type" model="ir.actions.act_window">
        <field name="name">Order Types</field>
        <field name="res_model">sale.order.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sale_order_type_root" name="Sale Order Types" parent="sale.sale_order_menu" action="action_sale_order_type"/>
</odoo>
